%Adding a blank page with 'BLANK PAGE' written top centre
\newcommand\blankpage{
	\newpage
	\hfill \textbf{\uppercase{blank page}} \hfill
	\thispagestyle{empty}
	\newpage
	}

%++++++++++++++++++++++++
%  Vectors and Matrices +
%++++++++++++++++++++++++

% Command for bold matrix and vector notation. Mainly for readability in the source code
\newcommand{\mat}[1]{\mathbf{#1}}
\newcommand{\vect}[1]{\mathbf{#1}}

% Useful for entering vectors and matrices
% It is just a wrapper for pmatrix, making sure the spacing is a little larger than
% the typical spacing of an array. 'nbm' stands for 'n by m'
\newcommand{\nbm}[1]{
	\renewcommand{\arraystretch}{1.1}
	\begin{pmatrix}
	#1
	\end{pmatrix}
}


%++++++++++++++++++++++++
%     Probabilities     +
%++++++++++++++++++++++++
\newcommand{\pr}[1]{\text{P}(#1)} %Straight P for probability expressions
\newcommand{\expect}[1]{\text{E}[#1]} %Straight E and square brackets for expectation expressions
\newcommand{\variance}[1]{\text{Var}[#1]} %Straight Var and square brackets for Variance expressions


%++++++++++++++++++++++++
%      Statistics       +
%++++++++++++++++++++++++
\newcommand{\chisq}{$\chi^2$\ }


%++++++++++++++++++++++++
%        Calculus       +
%++++++++++++++++++++++++
\newcommand{\deriv}[2]{\dfrac{\text{d}#1}{\text{d}#2}} %Leibniz differentiation notation
\newcommand{\diffeq}[2]{\dfrac{\partial #1}{\partial #2}} %Differential equations notation


